{
  "name": "my-confluence-mcp",
  "version": "1.0.1",
  "description": "Confluence MCP Server for Github Copilot",
  "license": "MIT",
  "author": "Ymmy833y",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc && tsc-alias",
    "bundle": "ncc build build/src/index.js -o dist",
    "build:bundle": "npm run build && npm run bundle",
    "start": "node dist/index.js",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint . --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:cov": "vitest run --coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.3",
    "@types/turndown": "^5.0.6",
    "@vercel/ncc": "^0.38.4",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "prettier": "^3.7.4",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.51.0",
    "vite-tsconfig-paths": "^6.0.4",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.2",
    "dotenv": "^17.2.3",
    "turndown": "^7.2.2",
    "winston": "^3.19.0",
    "zod": "^4.3.4"
  }
}
